<h1 class="mt-3">Restaurants</h1>
<ul class='card-group my-3'>
  <div class="row justify-content-begin">
    <% @restaurants.each do |restaurant| %>
      <li class="col-3">
        <div class="card border-2 shadow mb-3 text-center">
          <p class="card-header"><%= restaurant.name %></p>
          <p class="card-text mt-3">
            <% if restaurant.reviews.count > 1 %>
              <%= "#{restaurant.reviews.count} avaliações" %>
            <% elsif restaurant.reviews.count == 1 %>
              <%= "#{restaurant.reviews.count} avaliação" %>
            <% else  %>
              <%= 'Nenhuma avaliação' %>
            <% end %>
          </p>
          <%= link_to 'Details 🔍',
                      restaurant_path(restaurant), class: 'btn btn-info d-block m-2' %>
        </div>
      </li>
    <% end %>
  </div>
</ul>
<%= link_to 'Add ➕', new_restaurant_path, class: 'btn btn-info text-white' %>
